<article>
  <div class="book-heading">
    <h2><%= link_to @book.title.presence || t('books.unknown_title'), url(:books, :show, :id => @book.id) %></h2>
    <h3 class="user-name text-right"><%= link_to @book.user.display_name, url(:users, :show, name: @book.user.name) %></h3>
  </div>

  <div id="book-controls">
    <p class="embedding-tag col-10"><label for="embedding-tag"><%= t('books.encourage_embedding') %></label><br>
      <textarea readonly id="embedding-tag" onclick="this.select();"><%= embedding_tag(@book) %></textarea>
    </p>
    <ul id="book-controls" class="col-2">
      <li><%= link_to t('books.download'), :href => "/components/bibi/bib/bookshelf/#{@book.user.name}/#{File.basename(@book.epub.current_path)}", :download => "#{@book.title}.epub", :type => EPUB::MediaType::EPUB, :rel => 'nofollow' %></li>
      <li><%= link_to t('books.open'), :href => embedding_url(@book) %></li>
      <% if current_user == @book.user %><li><%= partial 'books/delete_form', :locals => {:book => @book} %></li><% end %>
    </ul>
  </div>
</article>

<div class="embedded col-12">
  <%= embedding_tag(@book) %>
</div>
