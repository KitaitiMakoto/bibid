<%- @title = "BiB/i'd" -%>
<!DOCTYPE html>
<title><%= @title %></title>
<link rel="stylesheet" type="text/css" href="/components/bootstrap/dist/css/bootstrap.min.css">
<link href='http://fonts.googleapis.com/css?family=Quando' rel='stylesheet' type='text/css'>
<%= stylesheet_link_tag 'application' %>

<%= flash_tag :success, :class => 'text-success' %>
<%= flash_tag :error, :class => 'text-error' %>

<h1><a href="<%= '/' %>">BiB<span style="font-family: 'Cantata One'; font-size: 0.69em; top: 0.05em; margin-left: -0.05em; margin-right: -0.081em; font-weight: 300px;">/</span>i<span style="font-size: 0.9em; margin-left: -0.02em; margin-right: -0.04em;">'</span>d</a></h1>

<nav class="global">
  <ul class="resources">
    <li><%= link_to t('users.list'), url(:users, :index), :'data-ligature-symbol' => 'users' %></li>
    <li><%= link_to t('books.uploaded_books'), url(:books, :index), :'data-ligature-symbol' => 'book' %></li>
  </ul>
  <ul>
  <% if current_user %>
    <li><%= link_to current_user.display_name, url(:users, :show, :name => current_user.name), :class => 'user-name', :'data-ligature-symbol' => 'you' %></li>
    <li>
      <% form_tag url(:sessions, :destroy), :class => 'sign-out-form', :'data-ligature-symbol' => 'logout' do %>
        <%= hidden_form_method_field 'delete' %>
        <%= submit_tag t('layout.nav.sign_out') %>
      <% end %>
    </li>
    <li class="upload-form text-right"><%= partial('books/upload_form') %></li>
  <% else %>
    <% if settings.omniauth_providers.length == 1 %>
      <li><%= link_to t('layout.nav.sign_in'), "/auth/#{settings.omniauth_providers.first.first}", :'data-ligature-symbol' => 'login' %></li>
    <% else %>
      <li><%= link_to t('layout.nav.sign_in'), url(:sessions, :new), :'data-ligature-symbol' => 'login' %></li>
    <% end %>
  <% end %>
  </ul>
</nav>

<%= yield %>

<footer>
  <ul class="text-right">
    <li><%= link_to t('helpers.contact'), settings.contact %></li>
    <li><a href="https://github.com/KitaitiMakoto/bibid">Source code</a></li>
  </ul>
</footer>

<script src="/components/jquery/jquery.min.js" type="text/javascript"></script>
<script src="/components/jquery-ujs/src/rails.js" type="text/javascript"></script>
<script src="/components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/components/underscore/underscore-min.js" type="text/javascript"></script>
<script src="/components/backbone/backbone-min.js" type="text/javascript"></script>
<script src="/javascripts/application.js" type="text/javascript"></script>
<%= settings.google_analytics_tag %>
