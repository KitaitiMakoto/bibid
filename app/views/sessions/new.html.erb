<% content_for :title do %><%= t('sessions.new') %><% end %>

<h1 class="app-title"><a href="<%= '/' %>">BiB<span style="font-family: 'Cantata One'; font-size: 0.69em; top: 0.05em; margin-left: -0.05em; margin-right: -0.081em; font-weight: 300px;">/</span>i<span style="font-size: 0.9em; margin-left: -0.02em; margin-right: -0.04em;">'</span>d</a></h1>

<p><%= t('sessions.sign_in_with') %></p>
<ul class="sign-in">
  <% settings.omniauth_providers.each do |provider, *_| %>
    <% if provider == :google_oauth2 %><li><%= link_to image_tag('https://developers.google.com/+/images/branding/sign-in-buttons/Red-signin_Short_base_44dp.png', :alt => 'Google+', :width => '106px'), '/auth/google_oauth2' %></li><% end %>
    <% if provider == :twitter %><li><%= link_to image_tag('/components/twitter-icon/index.png', :alt => 'Twitter', :width => '180px'), '/auth/twitter' %></li><% end %>
    <% if provider == :facebookd %><li><%= link_to image_tag('/components/facebook-icon/FB-f-Logo__blue_100.png', :alt => 'Facebook', :width => '92px'), '/auth/facebook' %></li><% end %>
  <% end %>
</ul>
